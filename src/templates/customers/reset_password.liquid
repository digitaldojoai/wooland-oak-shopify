<div class="f fw jcb aic account">
  <div class='account__col rel'>
    <div class="abs fill obj-fit fill-h fill-v" style="background-image: url({{ 'account_login.jpg' | asset_url }})"></div>
  </div>
  <div class="account__col aic f" data-component='accounts'>
    <div class="form-reset-password mha container--s px2">
      {% form 'reset_customer_password' %}

        <h1 class='h3 mb05 serif'>{{ 'customer.reset_password.title' | t }}</h1>

        <p class='s16'>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

        {{ form.errors | default_errors }}

        {%
        include 'input-text' with
        label: 'Password',
        placeholder: 'Password',
        name: 'customer[password]',
        type: 'password'
        %}

        {%
        include 'input-text' with
        label: 'Confirm Password',
        placeholder: 'Confirm Password',
        name: 'customer[password_confirmation]',
        type: 'password'
        %}

        <div class='mt1'>
          {%
          include 'button' with
          tag: 'button',
          type: 'submit',
          cta: 'Reset password',
          className: 'x no-ajax'
          %}
        </div>
      {% endform %}
    </div>
  </div>
</div>
